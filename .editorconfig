root = true

[*.{kt, kts}]
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 150
end_of_line = lf
kotlin_imports_layout = ascii

[*.xml]
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false